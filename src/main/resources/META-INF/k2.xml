<idea-plugin>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection
                implementationClass="com.github.suusan2go.kotlinfillclass.inspections.k2.FillDummyValuesInspection"
                groupPath="Kotlin"
                groupName="Fill class"
                enabledByDefault="true"
                level="INFORMATION"
                language="kotlin"
                displayName="Fill with dummy values (K2)"
                shortName="FillDummyValuesK2"/>

        <localInspection
                implementationClass="com.github.suusan2go.kotlinfillclass.inspections.k2.FillVariablesOfSameNameInspection"
                groupPath="Kotlin"
                groupName="Fill class"
                enabledByDefault="true"
                level="INFORMATION"
                language="kotlin"
                displayName="Fill class constructor with variables of the same name (K2)"
                shortName="FillVariablesOfSameNameK2"/>

        <localInspection
                implementationClass="com.github.suusan2go.kotlinfillclass.inspections.k2.FillEmptyValuesInspection"
                groupPath="Kotlin"
                groupName="Fill class"
                enabledByDefault="true"
                level="INFORMATION"
                language="kotlin"
                displayName="Fill with empty values (K2)"
                shortName="FillEmptyValuesK2"/>
    </extensions>
</idea-plugin>