<idea-plugin>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection
                implementationClass="com.github.suusan2go.kotlinfillclass.inspections.FillDummyValuesInspection"
                groupPath="Kotlin"
                groupName="Fill class"
                enabledByDefault="true"
                level="INFORMATION"
                language="kotlin"
                displayName="Fill with dummy values"/>

        <localInspection
                implementationClass="com.github.suusan2go.kotlinfillclass.inspections.FillVariablesOfSameNameInspection"
                groupPath="Kotlin"
                groupName="Fill class"
                enabledByDefault="true"
                level="INFORMATION"
                language="kotlin"
                displayName="Fill class constructor with variables of the same name"/>

        <localInspection
                implementationClass="com.github.suusan2go.kotlinfillclass.inspections.FillEmptyValuesInspection"
                groupPath="Kotlin"
                groupName="Fill class"
                enabledByDefault="true"
                level="INFORMATION"
                language="kotlin"
                displayName="Fill with empty values"/>
    </extensions>
</idea-plugin>